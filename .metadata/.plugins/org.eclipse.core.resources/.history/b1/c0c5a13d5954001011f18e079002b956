package gui;

import domain.DomainController;
import javafx.geometry.Insets;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextArea;
import javafx.scene.layout.VBox;

public class PuzzleInputScreen extends VBox {
	private final DomainController dc;

	private TextArea txaInput;
	private Label lblError;

	public PuzzleInputScreen(DomainController dc) {
		this.dc = dc;
		buildGUI();
	}

	private void buildGUI() {
		Label prompt = new Label("Please enter your puzzle input");
		prompt.setStyle("-fx-font-size: 20px");
		txaInput = new TextArea();
		txaInput.setPromptText("Enter puzzle input");
		Button btnSubmit = new Button("Submit input");
		btnSubmit.setOnAction(evt -> submit(txaInput.getText()));

		lblError = new Label("");
		lblError.setStyle("-fx-color: red");

		setSpacing(5);
		setPadding(new Insets(10));
		getChildren().addAll(prompt, txaInput, btnSubmit, lblError);
	}

	private void submit(String input) {
		lblError.setText("");
		try {
			dc.enterPuzzleInput(input);
		} catch (Exception e) {
			showException(e);
		}

	}

	private void showException(Exception e) {
		if (e instanceof IllegalArgumentException iae) {
			lblError.setText(iae.getMessage());
			return;
		}
		lblError.setText(String.format("%s thrown: %s", e.getClass().getSimpleName(), e.getMessage()));
	}

}
